<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/primary_item_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/course_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:text="Moi University"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/course_code"
            android:text="Introduction to Computers"
            android:layout_alignStart="@id/course_code"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/md_blue_400"
            />
        <LinearLayout
            android:layout_below="@id/course_name"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginStart="16dp"
            >
            <TextView
                android:id="@+id/tv_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Marks: "
                android:layout_weight="3"
                android:textColor="@color/md_blue_400"
                />

            <TextView
                android:id="@+id/tv_score_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=": 430"
                android:textSize="16sp"
                android:layout_weight="2"
                android:textColor="@color/md_blue_400"
                android:layout_marginBottom="8dp"
                />

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>